// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("user")
}

model Pedal {
  id                    String   @id @unique @default(uuid())
  name                  String
  startDate             DateTime
  startDateRegistration DateTime
  endDateRegistration   DateTime
  additionalInformatio  String
  startPlace            String
  participantsLimit     BigInt

  @@map("Pedal")
}
